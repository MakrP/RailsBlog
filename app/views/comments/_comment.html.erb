<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= comment.user.username %>:</strong>
          <%= comment.body %>
        </p>
      </div>
      <div class="content">
        <p>
          <small><%= time_ago_in_words(comment.updated_at) %> ago</small>
        </p>
      </div>
    </div>
    <% if logged_in? && comment.user.id == current_user%>
    <%= link_to 'Delete', [comment.article, comment],
                method: :delete, class: "button is-danger", data: { confirm: 'Are you sure?' } %>
    <% end %>
  </article>

</div>